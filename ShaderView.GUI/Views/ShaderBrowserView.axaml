<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ShaderView.GUI.Views.ShaderBrowserView">

  <DockPanel>
    <Menu DockPanel.Dock="Top">
      <MenuItem Header="_File">
        <MenuItem Header="_Open" Command="{Binding OpenFolder}" CommandParameter="{Binding $parent[Window]}"/>
        <MenuItem Header="Close" IsEnabled="{Binding FolderOpened}" Command="{Binding CloseFolder}" CommandParameter="{Binding $parent[Window]}"/>
      </MenuItem>
    </Menu>
    <Label>Hey</Label>
  </DockPanel>
  
</UserControl>
